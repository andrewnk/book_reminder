<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Call number</th>
      <th>Title</th>
      <th>Author</th>
      <th>Lender</th>
      <th>Lender other</th>
      <th>Date due</th>
      <th>Renew</th>
      <th>Reminder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.call_number %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.lender %></td>
        <td><%= book.lender_other %></td>
        <td><%= book.date_due %></td>
        <td><%= book.renew %></td>
        <td><%= book.reminder %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

